        <telerik:RadDocking Grid.Row="1">
            <telerik:RadDocking.DocumentHost>
                <telerik:RadSplitContainer>
                    <telerik:RadPaneGroup>
                        <telerik:RadPane Header="Waveform" CanUserClose="False" telerik:RadDocking.FloatingSize="800 600" telerik:DockingPanel.InitialSize="500, 500">
                            <telerik:RadDockPanel Grid.Row="2">
                                <Grid telerik:RadDockPanel.Dock="Bottom">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <ScrollBar x:Name="scrollBar" Value="{Binding HornizontalOffset, UpdateSourceTrigger=PropertyChanged}" Maximum="{Binding HornizontalMaximum}" Minimum="0" Orientation="Horizontal" Grid.Row="0"/>
                                    <telerik:RadSlider x:Name="slider" Value="{Binding TUPValue}" Minimum="{Binding MinTUP}" Maximum="{Binding MaxTUP}" Height="15" Width="150" HorizontalAlignment="Right" telerik:StyleManager.Theme="Crystal" Grid.Row="1"/>
                                </Grid>
                                <Border x:Name="waveformBorder"
                                        MouseEnter="waveformBorder_MouseEnter"
                                        MouseLeave="waveformBorder_MouseLeave"
                                        MouseMove="waveformBorder_MouseMove"
                                        SizeChanged="WaveformBorder_SizeChanged"
                                        MinWidth="{Binding ImageWidthMinimum}" MinHeight="{Binding ImageHeightMinimum}"
                                        BorderThickness="0.0" BorderBrush="Gray">
                                    <Image x:Name="waveformImage" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Stretch"/>
                                </Border>
                            </telerik:RadDockPanel>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                </telerik:RadSplitContainer>
            </telerik:RadDocking.DocumentHost>

            <telerik:RadSplitContainer InitialPosition="DockedRight" Orientation="Vertical" telerik:RadDocking.FloatingSize="800 600" telerik:DockingPanel.InitialSize="500, 500">
                <telerik:RadPaneGroup telerik:ProportionalStackPanel.RelativeSize="200, 200">
                </telerik:RadPaneGroup>
                <telerik:RadPaneGroup telerik:ProportionalStackPanel.RelativeSize="200, 250">
                </telerik:RadPaneGroup>
            </telerik:RadSplitContainer>
        </telerik:RadDocking>
    </Grid>
</Page>